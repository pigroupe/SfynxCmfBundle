{% set layout_nav = app.request.attributes.get('sfynx-layout') %}
{% extends layout_nav %}

{% block title %}Contact{% endblock%}

{% block content %}
    {{ form_start(form, {'action': path('public_contact'), 'method': 'POST', 'attr': {'class': 'email-contact', 'novalidate': 'novalidate', 'enctype': 'application/x-www-form-urlencoded'}}) }}
        {{ form_errors(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}

        {{ form_rest(form) }}

      <input type="submit" />
    {{ form_end(form) }}
{% endblock %}
