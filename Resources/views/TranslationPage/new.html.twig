{%  initJquery 'FORM:prototype-bytab' %}

{% extends app.request.attributes.get('sfynx-layout') %}

{% block title %}
	<h1><a href="{{ path('admin_redirection') }}">{{ "pi.home"|trans }}</a> > <a href="{{ path_url('admin_pagebytrans_show') }}">{{ 'pi.page.translation.title'|trans }}</a> > {{ 'pi.grid.action.create'|trans }}</h1>
{% endblock %}
 
{% block content %}

    {{ parent() }}
    	
	<!-- Begin tag markup -->
	<div id="tabs">
		{% include getParameter('sfynx.template.theme.layout.admin.pc')|replace({'::': ':'})~"Crud:new-header.html.twig" %}
		{% form_theme form getParameter('sfynx.template.theme.layout.admin.form.template') %}
		{{ form_start(form, {'action': path('admin_transpage_create'), 'method': 'POST', 'attr': {'class': 'myform', 'novalidate': 'novalidate', 'enctype': 'application/x-www-form-urlencoded'}}) }}
			<div id="tabs-1">
				    {{ form_widget(form) }} 
			</div>		    
		    <ul class="ui-widget-header ui-footer">
			    <li>
			    	<!-- <button id="add_tab" class="button-ui-add-tab">{{ 'pi.grid.action.add-tab'|trans }}</button> -->
			    	<button type="submit" class="button-ui-create">{{ 'pi.grid.action.create'|trans }}</button>
			    	{% if entity.getPage().getId() is defined %}
		            <a href="{{ path('admin_pagebytrans_show', { 'id': entity.getPage().getId() }) }}" class="button-ui-back-list">{{ 'pi.grid.action.back-to-the-list'|trans }}</a>
		            {% endif %}
			    </li>
			</ul>
        {{ form_end(form) }}
		{% include getParameter('sfynx.template.theme.layout.admin.pc')|replace({'::': ':'})~"Crud:new-footer.html.twig" %}
	</div>
	<!-- End tag markup -->		
    
	{% set options = {'prototype-name': ['translations'], 'prototype-tab-title': 'pi.page.translation.prototype-tab-title'|trans} %}
	{{ renderJquery('FORM', 'prototype-bytab', options )|raw }}	
	
{% endblock %}