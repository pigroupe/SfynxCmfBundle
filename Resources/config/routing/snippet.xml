<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_snippet" path="/">
        <default key="_controller">SfynxCmfBundle:Snippet:index</default>
    </route>

    <route id="admin_snippet_show" path="/{id}/show">
        <default key="_controller">SfynxCmfBundle:Snippet:show</default>
    </route>

    <route id="admin_snippet_new" path="/new">
        <default key="_controller">SfynxCmfBundle:Snippet:new</default>
    </route>

    <route id="admin_snippet_create" path="/create" methods="POST">
        <default key="_controller">SfynxCmfBundle:Snippet:create</default>
    </route>

    <route id="admin_snippet_edit" path="/{id}/edit">
        <default key="_controller">SfynxCmfBundle:Snippet:edit</default>
    </route>

    <route id="admin_snippet_update" path="/{id}/update" methods="POST">
        <default key="_controller">SfynxCmfBundle:Snippet:update</default>
    </route>

    <route id="admin_snippet_delete" path="/{id}/delete" methods="POST">
        <default key="_controller">SfynxCmfBundle:Snippet:delete</default>
    </route>

</routes>
