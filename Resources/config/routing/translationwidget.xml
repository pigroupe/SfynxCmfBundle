<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_transwidget" path="/">
        <default key="_controller">SfynxCmfBundle:TranslationWidget:index</default>
    </route>

    <route id="admin_transwidget_show" path="/{id}/show">
        <default key="_controller">SfynxCmfBundle:TranslationWidget:show</default>
    </route>

    <route id="admin_transwidget_new" path="/new">
        <default key="_controller">SfynxCmfBundle:TranslationWidget:new</default>
    </route>

    <route id="admin_transwidget_create" path="/create" methods="POST">
        <default key="_controller">SfynxCmfBundle:TranslationWidget:create</default>
    </route>

    <route id="admin_transwidget_edit" path="/{id}/edit">
        <default key="_controller">SfynxCmfBundle:TranslationWidget:edit</default>
    </route>

    <route id="admin_transwidget_update" path="/{id}/update" methods="POST">
        <default key="_controller">SfynxCmfBundle:TranslationWidget:update</default>
    </route>

    <route id="admin_transwidget_delete" path="/{id}/delete" methods="POST">
        <default key="_controller">SfynxCmfBundle:TranslationWidget:delete</default>
    </route>

</routes>
