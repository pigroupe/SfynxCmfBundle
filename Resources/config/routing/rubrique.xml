<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_rubrique" path="/">
        <default key="_controller">SfynxCmfBundle:Rubrique:index</default>
    </route>

    <route id="admin_rubrique_show" path="/{id}/show">
        <default key="_controller">SfynxCmfBundle:Rubrique:show</default>
    </route>

    <route id="admin_rubrique_new" path="/new">
        <default key="_controller">SfynxCmfBundle:Rubrique:new</default>
    </route>

    <route id="admin_rubrique_create" path="/create" methods="POST">
        <default key="_controller">SfynxCmfBundle:Rubrique:create</default>
    </route>

    <route id="admin_rubrique_edit" path="/{id}/edit">
        <default key="_controller">SfynxCmfBundle:Rubrique:edit</default>
    </route>

    <route id="admin_rubrique_update" path="/{id}/update" methods="POST">
        <default key="_controller">SfynxCmfBundle:Rubrique:update</default>
    </route>

    <route id="admin_rubrique_delete" path="/{id}/delete" methods="POST">
        <default key="_controller">SfynxCmfBundle:Rubrique:delete</default>
    </route>

    <route id="admin_rubrique_tree" path="/tree">
        <default key="_controller">SfynxCmfBundle:Rubrique:tree</default>
    </route>

    <route id="admin_rubrique_move_up" path="/{id}/node/move-up">
        <default key="_controller">SfynxCmfBundle:Rubrique:moveUp</default>
    </route>

    <route id="admin_rubrique_move_down" path="/{id}/node/move-down">
        <default key="_controller">SfynxCmfBundle:Rubrique:moveDown</default>
    </route>

    <route id="admin_rubrique_node_remove" path="/{id}/node/remove">
        <default key="_controller">SfynxCmfBundle:Rubrique:remove</default>
    </route>

</routes>
