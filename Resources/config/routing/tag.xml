<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_tag" path="/">
        <default key="_controller">SfynxCmfBundle:Tag:index</default>
    </route>

    <route id="admin_tag_show" path="/{id}/show">
        <default key="_controller">SfynxCmfBundle:Tag:show</default>
    </route>

    <route id="admin_tag_new" path="/new">
        <default key="_controller">SfynxCmfBundle:Tag:new</default>
    </route>

    <route id="admin_tag_create" path="/create" methods="POST">
        <default key="_controller">SfynxCmfBundle:Tag:create</default>
    </route>

    <route id="admin_tag_edit" path="/{id}/edit">
        <default key="_controller">SfynxCmfBundle:Tag:edit</default>
    </route>

    <route id="admin_tag_update" path="/{id}/update" methods="POST">
        <default key="_controller">SfynxCmfBundle:Tag:update</default>
    </route>

    <route id="admin_tag_delete" path="/{id}/delete" methods="POST">
        <default key="_controller">SfynxCmfBundle:Tag:delete</default>    </route>

</routes>
