<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_blockbywidget" path="/">
        <default key="_controller">SfynxCmfBundle:BlockByWidget:index</default>
    </route>

    <route id="admin_blockbywidget_show" path="/{id}/show">
        <default key="_controller">SfynxCmfBundle:BlockByWidget:show</default>
    </route>

    <route id="admin_blockbywidget_new" path="/new">
        <default key="_controller">SfynxCmfBundle:BlockByWidget:new</default>
    </route>

    <route id="admin_blockbywidget_create" path="/create" methods="POST">
        <default key="_controller">SfynxCmfBundle:BlockByWidget:create</default>
    </route>

    <route id="admin_blockbywidget_edit" path="/{id}/edit">
        <default key="_controller">SfynxCmfBundle:BlockByWidget:edit</default>
    </route>

    <route id="admin_blockbywidget_update" path="/{id}/update" methods="POST">
        <default key="_controller">SfynxCmfBundle:BlockByWidget:update</default>
    </route>

    <route id="admin_blockbywidget_delete" path="/{id}/delete" methods="POST">
        <default key="_controller">SfynxCmfBundle:BlockByWidget:delete</default>
    </route>

</routes>
