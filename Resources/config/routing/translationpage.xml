<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_transpage" path="/">
        <default key="_controller">SfynxCmfBundle:TranslationPage:index</default>
    </route>

    <route id="admin_transpage_show" path="/{id}/show">
        <default key="_controller">SfynxCmfBundle:TranslationPage:show</default>
    </route>

    <route id="admin_transpage_new" path="/new">
        <default key="_controller">SfynxCmfBundle:TranslationPage:new</default>
    </route>

    <route id="admin_transpage_create" path="/create" methods="POST">
        <default key="_controller">SfynxCmfBundle:TranslationPage:create</default>
    </route>

    <route id="admin_transpage_edit" path="/{id}/edit">
        <default key="_controller">SfynxCmfBundle:TranslationPage:edit</default>
    </route>

    <route id="admin_transpage_update" path="/{id}/update" methods="POST">
        <default key="_controller">SfynxCmfBundle:TranslationPage:update</default>
    </route>

    <route id="admin_transpage_delete" path="/{id}/delete" methods="POST">
        <default key="_controller">SfynxCmfBundle:TranslationPage:delete</default>
    </route>

</routes>
