<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_widget" path="/">
        <default key="_controller">SfynxCmfBundle:Widget:index</default>
    </route>

    <route id="admin_widget_show" path="/{id}/show">
        <default key="_controller">SfynxCmfBundle:Widget:show</default>
    </route>

    <route id="admin_widget_new" path="/new">
        <default key="_controller">SfynxCmfBundle:Widget:new</default>
    </route>

    <route id="admin_widget_create" path="/create" methods="POST">
        <default key="_controller">SfynxCmfBundle:Widget:create</default>
    </route>

    <route id="admin_widget_edit" path="/{id}/edit">
        <default key="_controller">SfynxCmfBundle:Widget:edit</default>
    </route>

    <route id="admin_widget_update" path="/{id}/update" methods="POST">
        <default key="_controller">SfynxCmfBundle:Widget:update</default>
    </route>

    <route id="admin_widget_delete" path="/{id}/delete" methods="POST">
        <default key="_controller">SfynxCmfBundle:Widget:delete</default>
    </route>

    <route id="admin_widget_delete_ajax" path="/ajax-delete" methods="GET|POST">
        <default key="_controller">SfynxCmfBundle:Widget:deleteajax</default>
    </route>

    <route id="admin_widget_movewidget_page" path="/movewidget-page" methods="GET|POST">
        <default key="_controller">SfynxCmfBundle:Widget:movewidgetajax</default>
    </route>

    <route id="admin_widget_move_ajax" path="/move-page" methods="GET|POST">
        <default key="_controller">SfynxCmfBundle:Widget:moveajax</default>
    </route>

</routes>
