<?xml version="1.0" encoding="UTF-8" ?>
<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_pagebyblock" path="/">
        <default key="_controller">SfynxCmfBundle:PageByBlock:index</default>
    </route>

    <route id="admin_pagebyblock_show" path="/{id}/show">
        <default key="_controller">SfynxCmfBundle:PageByBlock:show</default>
    </route>

    <route id="admin_pagebyblock_new" path="/new">
        <default key="_controller">SfynxCmfBundle:PageByBlock:new</default>
    </route>

    <route id="admin_pagebyblock_create" path="/create" methods="POST">
        <default key="_controller">SfynxCmfBundle:PageByBlock:create</default>
    </route>

    <route id="admin_pagebyblock_edit" path="/{id}/edit">
        <default key="_controller">SfynxCmfBundle:PageByBlock:edit</default>
    </route>

    <route id="admin_pagebyblock_update" path="/{id}/update" methods="POST">
        <default key="_controller">SfynxCmfBundle:PageByBlock:update</default>
    </route>

    <route id="admin_pagebyblock_delete" path="/{id}/delete" methods="POST">
        <default key="_controller">SfynxCmfBundle:PageByBlock:delete</default>
    </route>

</routes>
